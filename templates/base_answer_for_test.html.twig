<!DOCTYPE html>
<html lang="fr" class="public">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <title>
            {% block title %}Plateforme Sondage Atalan{% endblock %}
        </title>
        {% block stylesheets %}            
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
            <link rel="stylesheet" href="{{ asset('_css/style.css') }}">
        {% endblock %}
        {% block head_javascripts %}
            <!-- Latest compiled and minified JavaScript -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
            <script src="{{ asset('bundles/fosckeditor/ckeditor.js') }}"></script>
            <script src="{{ asset('bundles/fosckeditor/config.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">

            <header role="banner">
                <div class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="https://www.atalan.fr"><img src="{{ asset('images/atalan.png') }}" alt="Atalan - Accessibilité numérique, sensibilisation au handicap" /></a>
                </div>
            </header>

            <main role="main">
                {% block body %}{% endblock %}
                {% block javascripts %}{% endblock %}
            </main>

        </div>
    </body>
</html>