{% extends 'base.html.twig' %}

{% block title %}Technologies d'assistance{% endblock %}

{% block body %}
    <h1>Technologies d'assistance</h1>
    <p><a href="{{ path('assistive_edit', {'id': 0}) }}">Ajouter un nouveau type de technologie d'assistance</a></p>     
    <table>
        <thead>
            <th scope="col">Type de technologie d'assistance</th>
            <th scope="col">Technologies d'assistance</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </thead>
        <tbody>
            {% for category in categories|sort %}
                <tr>
                    <th scope="row">{{ category.type }}</th>
                    <td>
                        <ol>
                            {% for assistive in category.assistives %}
                                <li>{{ assistive.name }}</li>
                            {% endfor %}
                        </ol>
                    </td>
                    <td><a href="{{ path('assistive_edit', {'id': category.id}) }}"">Modifier</a></td>
                    <td><a href="{{ path('assistive_delete', {'id': category.id}) }}">Supprimer</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
