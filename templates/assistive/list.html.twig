{% extends 'base.html.twig' %}

{% block title %}Gestion des technologies d'assistance{% endblock %}

{% block body %}
    <h1>Gestion des technologies d'assistance</h1>
    <p>
        <a class="btn btn-info" href="{{ path('assistive_edit', {'id': 0}) }}">Créer un nouveau type de technologie d'assistance</a>
    </p>
    {% if categories %}     
        <table class="table table-bordered table-dark">
            <thead class="thead-light">
                <th scope="col">Type</th>
                <th scope="col">Technologies d'assistance</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </thead>
            <tbody>
                {% for category in categories|sort %}
                    <tr>
                        <th scope="row">{{ category.type }}</th>
                        <td>
                            <ol>
                                {% for assistive in category.assistives %}
                                    <li>{{ assistive.name }}</li>
                                {% endfor %}
                            </ol>
                        </td>
                        <td><a class="btn btn-info" href="{{ path('assistive_edit', {'id': category.id}) }}"">Modifier</a></td>
                        <td><a class="btn btn-warning" onclick="return confirm('êtes-vous sûr de vouloir supprimer ce type de technologie d\'assistance??');" href="{{ path('assistive_delete', {'id': category.id}) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune technologie d'assistance créée.</p>
    {% endif %}
{% endblock %}